@using OneInc.Models
@model List<Question>

@{ 
    int qpos = 0;
}
@foreach (Question question in Model)
{
    <div class="row">
        <div class="col-xs-12">
            <div class="chart-container">
                <canvas id="resultChart_@question.Id"></canvas>
                </div>
            </div>
    </div>
    <div class="clearfix"></div>

    <script>
        $(document).ready(function () {
            new Chart($("#resultChart_@question.Id"), {
                type: 'bar',
                data: {
                    labels: results[@qpos]['value'],
                    datasets: [{
                        label: '@question.Title',
                        data: results[@qpos]['count'],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255,99,132,1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    },
                    responsive: true
                }
            });
        });
    </script>
    qpos++;
}


@section  Scripts{
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.bundle.min.js"></script>
    <script>
        var results = [];
        var options = ["one", "two", "three", "four", "five", "six", "seven", "eight", "nine", "ten"];
        (function () {

            @{
                int i = 0;
            }
            @foreach(Question q in Model)
            {
                <text>results[@i] = {value:[], count:[]};</text>
                int j = 0;
                foreach(Option o in q.Options)
                {
                    <text>results[@i]['value'][@j] = '@o.Value';</text>
                    <text>results[@i]['count'][@j] = @o.Results.Count;</text>
                    j++;
                }
                i++;
            }
        }) ();

    </script>
}